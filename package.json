{
  "private": true,
  "name": "@trail-status-app/workspace",
  "repository": "git@github.com:jschr/hydrocut-trail-status.git",
  "author": "Jordan Schroter <github@jschr.io>",
  "workspaces": [
    "api",
    "frontend",
    "utilities",
    "infrastructure"
  ],
  "scripts": {
    "dev": "dotenv -e .env -e .env.dev -- wsrun --exclude-missing dev",
    "build": "wsrun --exclude-missing --stages build",
    "watch": "wsrun --exclude-missing watch",
    "lint": "wsrun --exclude-missing lint",
    "package": "tasks/package.sh",
    "deploy": "dotenv -e .env -e .env.production yarn infrastructure deploy",
    "create-status-sync-token:dev": "dotenv -e .env -e .env.dev yarn api create-status-sync-token",
    "create-status-sync-token:production": "dotenv -e .env -e .env.production yarn api create-status-sync-token",
    "--- workspaces ---": "",
    "api": "yarn workspace @trail-status-app/api",
    "frontend": "yarn workspace @trail-status-app/frontend",
    "infrastructure": "yarn workspace @trail-status-app/infrastructure",
    "utilities": "yarn workspace @trail-status-app/utilities"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "dotenv-cli": "^3.1.0",
    "dotenv-expand": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^1.19.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.5",
    "wsrun": "^5.2.0"
  }
}
